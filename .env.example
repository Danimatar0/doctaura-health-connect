# ===== Keycloak Configuration =====
# Replace these values with your actual Keycloak instance details

# Keycloak server URL (without trailing slash)
VITE_KEYCLOAK_URL=https://keycloak.example.com

# Keycloak realm name
VITE_KEYCLOAK_REALM=your-realm

# Keycloak client ID
VITE_KEYCLOAK_CLIENT_ID=your-client-id

# Keycloak client secret (optional, only for confidential clients)
VITE_KEYCLOAK_CLIENT_SECRET=

# ===== API Configuration =====
# Backend API base URL
VITE_API_BASE_URL=https://api.doctaura.com

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# ===== Application Configuration =====
# Application version
VITE_APP_VERSION=1.0.0

# Application base URL (leave empty to use current origin)
VITE_APP_BASE_URL=

# ===== Feature Flags =====
# Enable email verification requirement
VITE_ENABLE_EMAIL_VERIFICATION=true

# Enable social login providers
VITE_ENABLE_SOCIAL_LOGIN=false

# Enable two-factor authentication
VITE_ENABLE_2FA=false

# ===== Data Source Configuration =====
# Use mock data instead of real API calls (true for development, false for production)
# Set to 'false' to use real API endpoints
VITE_USE_MOCK_DATA=true

# ===== Registration Strategy =====
# Registration strategy: 'webapp' or 'keycloak'
VITE_REGISTRATION_STRATEGY=webapp
